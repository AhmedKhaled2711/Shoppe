<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="288dp"
            android:height="288dp"
            android:viewportWidth="288"
            android:viewportHeight="288">
            <group
                android:name="group"
                android:pivotX="144"
                android:pivotY="144"
                android:scaleX="0.85"
                android:scaleY="0.85">
                <path
                    android:name="path"
                    android:pathData="M 0 0 L 288 0 L 288 288 L 0 288 Z"
                    android:fillColor="#ffffff"
                    android:strokeWidth="1"/>
                <path
                    android:name="path_1"
                    android:pathData="M 201.278 198.345 L 75 199.602 L 97.378 90.189 L 186.359 94.687 L 201.278 198.345 Z"
                    android:fillColor="#8bc6ff"
                    android:strokeWidth="1"/>
                <path
                    android:name="path_2"
                    android:pathData="M 213 203.999 L 95.069 203.999 L 95.732 199.396 L 201.278 198.345 L 186.877 98.288 L 201.278 96.921 L 213 203.999 Z"
                    android:fillColor="#0051ff"
                    android:fillAlpha="0.6"
                    android:strokeWidth="1"/>
                <path
                    android:name="path_3"
                    android:pathData="M 95.732 199.396 L 109.225 105.653 L 186.878 98.288 L 201.279 198.346 L 95.732 199.396 Z"
                    android:fillColor="#0051ff"
                    android:fillAlpha="0.6"
                    android:strokeWidth="1"/>
                <path
                    android:name="path_4"
                    android:pathData="M 172.232 87.241 L 164.687 87.241 C 164.687 79.208 157.298 72.673 148.213 72.673 C 139.13 72.673 131.739 79.208 131.739 87.241 L 124.193 87.241 C 124.193 75.529 134.969 66 148.213 66 C 161.457 66 172.232 75.529 172.232 87.241 Z"
                    android:fillColor="#5982da"
                    android:strokeWidth="1"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:startOffset="200"
                    android:duration="500"
                    android:valueFrom="0"
                    android:valueTo="0.85"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:startOffset="200"
                    android:duration="500"
                    android:valueFrom="0"
                    android:valueTo="0.85"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator"/>
                <objectAnimator
                    android:propertyName="rotation"
                    android:startOffset="250"
                    android:duration="350"
                    android:valueFrom="0"
                    android:valueTo="360"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
